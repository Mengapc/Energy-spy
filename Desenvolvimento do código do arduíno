// Código LCD com I2C
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define endereco  0x27
#define colunas   16
#define linhas    2

LiquidCrystal_I2C lcd(endereco, colunas, linhas);

void setup() {
  lcd.init();
  lcd.backlight();
  lcd.clear();

  lcd.print("Corrente: variável");
  delay(500);
  lcd.setCursor(0, 1);
  lcd.print("Potencia: variável");
  delay(500);

  lcd.noBacklight();
  delay(2000);
  lcd.backlight();
  delay(2000);

}
